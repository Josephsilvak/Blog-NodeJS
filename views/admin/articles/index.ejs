<%- include ('../../../partials/header.ejs') %>
<%- include ('../../../partials/navbar.ejs') %>
    <div class="container"><br>

        <hr><h2 style="display: inline-block;">Artigos</h2>
        <a class="btn btn-success" href="/admin/articles/new" style="margin: 0 0 11px 7px ;">Novo Artigo</a>
        <hr>
        
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.id %></td>
                        <td><%= article.title %></td>
                        <td><%= article.slug %></td>
                        <td><%= article.category.title %></td>
                        <td class="acao">
                            <style>td.acao form{display: inline;}</style>

                            <form action="" method="GET">
                                <button class="btn btn-warning text-white">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                            </form>
                            <form action="/articles/delete" method="POST" onsubmit="confirDelete(event, this)">
                                <input type="hidden" name="id" value="<%= article.id %>">
                                <button class="btn btn-danger"><i class="fa-solid fa-x"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
        </table>
    </div><!--container-->
<%- include ('../../../partials/body.ejs') %>


<script>
    function confirDelete(event, form){
        event.preventDefault()

        let decision = confirm('Você quer deletar esse artigo?')
        if(decision){
            form.submit()
        }
    }
</script>